"use strict";

var mvc = require('express-mvc');

module.exports = mvc.Model.create('<%=name%>', function Blueprint(app)
{
    this.title      = 'id';
    this.expose     = false;
    this.guarded    = [];
    this.appends    = [];
    this.labels     = {};
    this.populate   = [];
    this.managed    = false;

    this.schema = {
        created_at:  { type: Date, default: Date.now },
        modified_at: { type: Date, default: Date.now }
    };

    this.methods = {}

});