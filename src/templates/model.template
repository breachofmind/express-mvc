var ExpressMVC = require('express-mvc');

module.exports = ExpressMVC.Model.create('<%=_.capitalize(name)%>', function Blueprint(app)
{
    this.title      = 'id';
    this.expose     = false;
    this.guarded    = [];
    this.appends    = [];
    this.labels     = {};
    this.populate   = [];

    this.schema = {
        created_at:  { type: Date, default: Date.now },
        modified_at: { type: Date, default: Date.now }
    };

    this.methods = {}

});